    public void doConnect( ) 
    {
        try 
        {
          connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","12345");
          statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,
                                                            ResultSet.CONCUR_UPDATABLE);
         query = "select * from Passengers";
        } 
        catch (SQLException ex) 
        {
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }

    }
          private void getlastId(){
         try{
//connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");
         statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,
                                                          ResultSet.CONCUR_UPDATABLE);
          String autoId = "select max(Passenger_ID)from Passengers";
	  resultSet = statement.executeQuery(autoId);  
          if(resultSet.next()){
          lastId=resultSet.getInt(1);
          lastId++;
          PasID.setText(Integer.toString(lastId));
          }
        }
         catch (SQLException ex) 
        {
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }
          }
