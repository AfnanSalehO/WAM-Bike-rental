    private void SignUpActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String em=ema.getText();
        if(usern.getText().equals("")||ema.getText().equals("")||passw.getPassword().equals("")){
         JOptionPane.showMessageDialog(this, "Please Enter all data");
        if(!valEm(em)){
            JOptionPane.showMessageDialog(this, "Enter a valid Email", "Wrong",JOptionPane.ERROR_MESSAGE );
        }}
        else{  
           try{
            resultSet = statement.executeQuery(query);  
           //insert
            resultSet.moveToInsertRow();
            resultSet.updateInt("Passenger_ID",lastId);
            resultSet.updateString("UserName",usern.getText());
            resultSet.updateString("Email", ema.getText());
            resultSet.updateString("Password", String.valueOf(passw.getPassword()));
            resultSet.insertRow();
            resultSet.close();
            statement.close();
           
          ///////////////////////////    
             LoginPage lg=new LoginPage();
        this.dispose();
        lg.setVisible(true);  
           }
       catch (SQLException sqlEx) 
 {
  JOptionPane.showMessageDialog(this, sqlEx.getMessage());
 }    
           catch(Exception m){
           JOptionPane.showMessageDialog(null, "you must enter correct data", "wrong", JOptionPane.ERROR_MESSAGE);
        }
       
        }

    }                                      

