    private void DeleteActionPerformed(java.awt.event.ActionEvent evt) {                                       

        try{
        String del="Delete From trip where Trip_ID=?";
     connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");           
       psTrip=connection.prepareStatement(del);
       psTrip.setString(1, TId.getText());
       psTrip.executeUpdate();
       //////////////
        String delTra="Delete From Trains where Train_Na=?";
       psTrain=connection.prepareStatement(delTra);
       psTrain.setString(1, TNa.getText());
       psTrain.executeUpdate();
       JOptionPane.showMessageDialog(this, "Delete Done");
        }
            catch (SQLException sqlEx)  {
  JOptionPane.showMessageDialog(this, sqlEx.getMessage());
           
            }
      ShowTD();  

    }                                      

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
         DefaultTableModel m=(DefaultTableModel) jTable1.getModel();
         String g=m.getValueAt(jTable1.getSelectedRow(), 0).toString();
          String SCi=m.getValueAt(jTable1.getSelectedRow(), 1).toString();
          String D=m.getValueAt(jTable1.getSelectedRow(), 2).toString();
          String Ti=m.getValueAt(jTable1.getSelectedRow(), 3).toString();
          String DA=m.getValueAt(jTable1.getSelectedRow(), 4).toString();
          String PR=m.getValueAt(jTable1.getSelectedRow(),5).toString();
          TId.setText(g);
         StaC.setText(SCi);
          Des.setText(D);
         Time.setText(Ti);
         Date.setText(DA);
         Price.setText(PR);

        
    }                                    

    private void UpdateActionPerformed(java.awt.event.ActionEvent evt) {                                       
 try{
     if(StaC.getText().equals("")||Des.getText().equals("")||Time.getText().equals("")||Date.getText().equals("")
     ||Price.getText().equals("")||TNa.getText().equals("")||TS.getText().equals("")){
            JOptionPane.showMessageDialog(this, "Please Enter all data");
            }
            else{

connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");           
                  String Up="UPDATE trip SET Starting_City=?, Destination=?, Time=?, Date=?, Price=? where Trip_ID=?";
       psTrip=connection.prepareStatement(Up);
       psTrip.setString(6, TId.getText());
       psTrip.setString(1, StaC.getText());
       psTrip.setString(2,Des.getText());
       psTrip.setString(3,Time.getText());
       psTrip.setString(4, Date.getText());
       psTrip.setString(5,  Price.getText());
       psTrip.executeUpdate();
       /////
        
      String t="UPDATE Trains SET Max_Speed=? where Train_Na=?";
       psTrain=connection.prepareStatement(t);
          psTrain.setString(2, TNa.getText());
       psTrain.setString(1, TS.getText());
        psTrain.executeUpdate();
      JOptionPane.showMessageDialog(this, "Update Done");
            }  }  
catch (SQLException sqlEx) {
 JOptionPane.showMessageDialog(this, sqlEx.getMessage());}
    ShowTD();  
        
    }                                      

    private void jTable2MouseClicked(java.awt.event.MouseEvent evt) {                                     
          DefaultTableModel m=(DefaultTableModel) jTable2.getModel(); 
        String TRN=m.getValueAt(jTable2.getSelectedRow(),0).toString();
          String MAXS=m.getValueAt(jTable2.getSelectedRow(),1).toString(); 
                   TNa.setText(TRN);
         TS.setText(MAXS);
    }                                    

    private void ResetActionPerformed(java.awt.event.ActionEvent evt) {                                      
       TId.setText("");
        StaC.setText("");
        Des.setText("");
        Time.setText("");
        Date.setText("");
        Price.setText("");
        TNa.setText("");
        TS.setText("");
    }                                     
private int curRow=0;
    public void ShowTD(){
try{
    connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");           
   String Sh="SELECT * FROM trip ";
   psTrip=connection.prepareStatement(Sh);
   resultSetTrip=psTrip.executeQuery();
      jTable1.setModel(DbUtils.resultSetToTableModel(resultSetTrip));
      
      
    String Shtra="SELECT * FROM Trains ";
    psTrain=connection.prepareStatement(Shtra);
    resultSetTrain=psTrain.executeQuery();
       jTable2.setModel(DbUtils.resultSetToTableModel(resultSetTrain));
}
catch(Exception e){
JOptionPane.showMessageDialog(this, e);
}
    }
