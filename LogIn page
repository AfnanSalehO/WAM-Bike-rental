public boolean AdLo(String username, String password){
 
    try{
 queryA = "select UserName , Password from Admin where UserName= '"+ username+
                    "' AND Password = '"+ password+"'";
  resultSet = statement.executeQuery(queryA);
              while(resultSet.next()){
                String U= resultSet.getString("UserName");
                String P= resultSet.getString("Password");
                return true;
            } 
        }
      catch (SQLException sqlEx) 
 {
  JOptionPane.showMessageDialog(this, sqlEx.getMessage());
 }
//    catch (Exception exception){
//    JOptionPane.showMessageDialog(frame, "Database error: " + exception.getMessage());
//  }
        return false;
    }



    public boolean PaLo(String username, String password){
 
    try{
 queryP = "select UserName , Password from Passengers where UserName= '"+ username+
                    "' AND Password = '"+ password+"'";
  resultSet = statement.executeQuery(queryP);
              while(resultSet.next()){
                String U= resultSet.getString("UserName");
                String P= resultSet.getString("Password");
              // naM.setText(userN.getText());
                return true;
                
            } 
        }
      catch (SQLException sqlEx) 
 {
  JOptionPane.showMessageDialog(this, sqlEx.getMessage());
 }
//    catch (Exception exception){
//    JOptionPane.showMessageDialog(frame, "Database error: " + exception.getMessage());
//  }
return false;
}
public String na;
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        if(userType.getSelectedItem()=="Admin"){
            try{
    String user=userN.getText();
    String p=String.valueOf(pass.getPassword());
       if(AdLo(user, p)){
     
      Admin ad=new Admin();
       this.dispose();
       ad.setVisible(true);       
            }
             else{
            JOptionPane.showMessageDialog(this, "Please type correct Username/Password!");
            }
    }    catch (Exception exception){
            JOptionPane.showMessageDialog(this, "Please type correct information");
        }
}
else{
    try{
    String user=userN.getText();
    String p=String.valueOf(pass.getPassword());
       if(PaLo(user, p)){
        MyAccount B=new MyAccount();
        B.naM.setText(LoginPage.userN.getText());
        B.PM.setText(String.valueOf(LoginPage.pass.getPassword()));
        
      this.dispose();
     B.setVisible(true);  
//      HomePage hp=new HomePage();
//       this.dispose();
//       hp.setVisible(true);       
            }
             else{
            JOptionPane.showMessageDialog(this, "Please type correct Username/Password!");
            }
    }    catch (Exception exception){
            JOptionPane.showMessageDialog(this, "Please type correct information");
        }  

}
    }                                        

