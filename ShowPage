    private void searchActionPerformed(java.awt.event.ActionEvent evt) {                                       
       try{
       connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","Aa201434");
      // int n=Integer.parseInt(search.getText());
       String se="Select * from ticket_booking where Ticket_ID=?";
       ps=connection.prepareStatement(se);
       ps.setString(1, search.getText());
            set=ps.executeQuery();
       QURY.setModel(DbUtils.resultSetToTableModel(set));
       }
catch (SQLException sqlEx) {
 JOptionPane.showMessageDialog(this, sqlEx.getMessage());
}
//ShowTD();
    }                                      

    private void DeleteActionPerformed(java.awt.event.ActionEvent evt) {                                       
