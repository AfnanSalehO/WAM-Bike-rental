    private void DisplayActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try 
        {
         DefaultTableModel show=(DefaultTableModel) jTable1.getModel();

        Connection  connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");
          statement = connection.createStatement();
       String qTrip="Select * from trip";
        String qTrain="Select * from Trains";
        resultSetTrip=statement.executeQuery(qTrip);

        while(resultSetTrip.next()){
        String TripID=String.valueOf(resultSetTrip.getInt("Trip_ID"));
        String S=resultSetTrip.getString("Starting_City");
        String Des=resultSetTrip.getString("Destination");
        String T=resultSetTrip.getString("Time");
        String Da=resultSetTrip.getString("Date");
        String P=resultSetTrip.getString("Price");
        String [] All={TripID,S,Des,T,Da,P};
         show.addRow(All);
        }
        resultSetTrain=statement.executeQuery(qTrain);
        while(resultSetTrain.next()){
        String TR=resultSetTrain.getString("Train_Na");
       String MS=String.valueOf(resultSetTrain.getInt("Max_Speed"));
        //  String [] All={TR,MS};
        show.setValueAt(TR, curRow, 6);
        show.setValueAt(MS, curRow, 7);
        curRow++;
        }
      //   resultSet.next();
        } 
        catch (SQLException ex) 
        {
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }       // TODO add your handling code here:
    }                                       

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
  try{
       if(StaC.getText().equals("")||Des.getText().equals("")||Time.getText().equals("")||Date.getText().equals("")
         ||Price.getText().equals("")||TNa.getText().equals("")||TS.getText().equals("")){
            JOptionPane.showMessageDialog(this, "Please Enter all data");
            }
            else{             
        String q="INSERT INTO ticket_booking (Ticket_ID,Train_Na,Starting_City,Destination,Time,Date,Price) Values (?,?,?,?,?,?,?)";
        connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/WAMTrain","root","1234");           
       psTrip=connection.prepareStatement(q);
       psTrip.setString(1, Ticket.getText());
       psTrip.setString(2, TNa.getText()); 
       psTrip.setString(3, StaC.getText());
       psTrip.setString(4,Des.getText());
       psTrip.setString(5,Time.getText());
       psTrip.setString(6,Date.getText());
       psTrip.setString(7,Price.getText());
       psTrip.executeUpdate();

       /////
        JOptionPane.showMessageDialog(this, "Booking Done");
        getlastId();
            }  }  
catch (SQLException sqlEx) {
 JOptionPane.showMessageDialog(this, sqlEx.getMessage());
}

