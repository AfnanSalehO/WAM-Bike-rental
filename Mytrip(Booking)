    private void jMenuItem3ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        JOptionPane.showMessageDialog(this, "This application allow you to book a train trip and display information about trips ","About us", JOptionPane.INFORMATION_MESSAGE);
