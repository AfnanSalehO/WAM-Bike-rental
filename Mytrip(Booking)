    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
             DefaultTableModel m=(DefaultTableModel) jTable1.getModel();
         //String g=m.getValueAt(jTable1.getSelectedRow(), 0).toString();
          String SCi=m.getValueAt(jTable1.getSelectedRow(), 1).toString();
          String D=m.getValueAt(jTable1.getSelectedRow(), 2).toString();
          String Ti=m.getValueAt(jTable1.getSelectedRow(), 3).toString();
          String DA=m.getValueAt(jTable1.getSelectedRow(), 4).toString();
          String PR=m.getValueAt(jTable1.getSelectedRow(),5).toString();
          String TRN=m.getValueAt(jTable1.getSelectedRow(),6).toString();
          String MAXS=m.getValueAt(jTable1.getSelectedRow(),7).toString();
         // TId.setText(g);
         StaC.setText(SCi);
          Des.setText(D);
         Time.setText(Ti);
         Date.setText(DA);
         Price.setText(PR);
         TNa.setText(TRN);
         TS.setText(MAXS);
    }                                    

